{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:@ota-meshi/svelte/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "node_modules/",
    "public/",
    "dist/"
  ],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      // "processor": "svelte3/svelte3"
      "parser": "svelte-eslint-parser",
      // AirBnB's ESLint config rules with indentation can conflict with svelte-eslint-parser's, hence disable one of them
      "rules": {
        // svelte-eslint-parser's
        "@ota-meshi/svelte/indent": [
          "error",
          {
            "indent": 2,
            "ignoredNodes": [],
            "switchCase": 1,
            "alignAttributesVertically": true
          }
        ],
        // AirBnB's
        "indent": "off",
        "@ota-meshi/svelte/first-attribute-linebreak": [
          "error",
          {
            "multiline": "below",
            "singleline": "beside"
          }
        ],
        "@ota-meshi/svelte/max-attributes-per-line": [
          "error",
          {
            "multiline": 1,
            "singleline": 3
          }
        ],
        "@ota-meshi/svelte/html-quotes": [
          "error",
          {
            "prefer": "double",
            "dynamic": {
              "quoted": false,
              "avoidInvalidUnquotedInHTML": false
            }
          }
        ],
        "@ota-meshi/svelte/shorthand-directive": [
          "error",
          {
            "prefer": "always"
          }
        ],
        "@ota-meshi/svelte/shorthand-attribute": [
          "error",
          {
            "prefer": "always"
          }
        ],
        "@ota-meshi/svelte/no-target-blank": [
          "error",
          {
            "allowReferrer": true,
            "enforceDynamicLinks": "always"
          }
        ],
        "@ota-meshi/svelte/spaced-html-comment": [
          "error",
          "always"
        ]
      }
    }
  ],
  // "parserOptions": {
  //   "ecmaVersion": 13,
  //   "sourceType": "module"
  // },
  "globals": {
    // To ignore the global variables / funcs which are normally taken from a library, put them in the list below
    // For Unit Tests (TBC)
    "jest": "readonly",
    "describe": "readonly",
    "beforeAll": "readonly",
    "beforeEach": "readonly",
    "afterAll": "readonly",
    "afterEach": "readonly",
    "test": "readonly",
    "expect": "readonly"
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "FunctionDeclaration": { "parameters": "first" },
        "FunctionExpression": { "parameters": "first" }
      }
    ],
    "no-trailing-spaces": [
      "error",
      { "skipBlankLines": false }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "function-paren-newline": ["error", "never"],
    "no-extra-boolean-cast": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "import/prefer-default-export": "off",
    "max-len": [
      "error",
      { "code": 120 }
    ],
    "no-underscore-dangle": "off",
    "import/no-mutable-exports": "off",
    "array-bracket-spacing": [
      "error",
      "always",
      {
        "arraysInArrays": false,
        "objectsInArrays": false
      }
    ],
    "linebreak-style": "off"
  }
}
